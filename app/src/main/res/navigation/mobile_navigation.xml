<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/signUpActivity">
    <fragment
        android:id="@+id/dashboardActivity"
        android:name="com.example.e_scheduler.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardActivity_to_loginActivity"
            app:destination="@id/loginActivity"
            app:popUpTo="@id/dashboardActivity"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpActivity"
        android:name="com.example.e_scheduler.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpActivity_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>
    <fragment
        android:id="@+id/loginActivity"
        android:name="com.example.e_scheduler.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginActivity_to_dashboardActivity"
            app:destination="@id/dashboardActivity" />
        <action
            android:id="@+id/action_loginActivity_to_signUpActivity"
            app:destination="@id/signUpActivity" />
    </fragment>
    <fragment
        android:id="@+id/announcementFragment"
        android:name="com.example.e_scheduler.AnnouncementFragment"
        android:label="Announcemnet"
        tools:layout="@layout/fragment_announcement" />
    <fragment
        android:id="@+id/noticeActivity"
        android:name="com.example.e_scheduler.NoticeActivity"
        android:label="Notice"
        tools:layout="@layout/fragment_notice" />
</navigation>